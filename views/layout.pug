doctype html 
html
    head 
        title First App 
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')

    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            .container-fluid
                a.navbar-brand(href='/') ME__N STACK

                #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item
                    a.nav-link.active(aria-current='page' href='/') Home
                    if user
                        li.nav-item
                        a.nav-link.active(aria-current='page' href='/articles/add') Add Articles 
                    if user
                        li 
                        a.nav-link(href='/users/logout') Logout 
                    else
                        li 
                        a.nav-link(href='/users/register') Register
                        li 
                        a.nav-link(href='/users/login') Login 

                    li.nav-item
                form.d-flex(action='/search', method='GET')
                    input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
                    button.btn.btn-outline-success(type='submit') Search


        .container
            !=messages('message',locals)
            if errors 
                each error, i in errors 
                    div(class="alert alert-danger") #{error.msg}
            block content 
            br
            br
            footer 
                p Copyright &copy; 2021

        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')
